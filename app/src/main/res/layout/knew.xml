<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Question 1 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why did you download this app?"
                    android:textColor="#0A1A1D"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgDownloadReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbDownloadReason1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0A1A1D"
                        android:text="To try it out" />

                    <RadioButton
                        android:id="@+id/rbDownloadReason2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0A1A1D"
                        android:text="For a specific feature" />

                    <RadioButton
                        android:id="@+id/rbDownloadReason3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To explore options" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Question 2 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For which purpose are you using this app?"
                    android:textColor="#0A1A1D"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgPurpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbPurpose1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment" />

                    <RadioButton
                        android:id="@+id/rbPurpose2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learning" />

                    <RadioButton
                        android:id="@+id/rbPurpose3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Productivity" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Question 3 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How can we improve the app?"
                    android:textColor="#0A1A1D"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgImprovement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbImprovement1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Improve speed" />

                    <RadioButton
                        android:id="@+id/rbImprovement2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add more features" />

                    <RadioButton
                        android:id="@+id/rbImprovement3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Better UI design" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Survey"
            android:layout_marginTop="8dp"
            android:backgroundTint="#0A1A1D"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>